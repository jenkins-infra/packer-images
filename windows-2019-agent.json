{
  "variables": {
    "maven_version": "3.6.3",
    "git_version": "2.25.1",
    "java_version": "11.0.6+10"
  },
  "builders": [
    {
      "type": "azure-arm",
      "vm_size": "Standard_D4_v3",
      "os_type": "Windows",
      "image_publisher": "MicrosoftWindowsServer",
      "image_offer": "WindowsServer",
      "image_sku": "2019-Datacenter-Core",

      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",

      "location": "{{user `location`}}",
      "managed_image_name": "jenkins-agent-win2019-{{isotime \"20060102150405\"}}",
      "managed_image_resource_group_name": "{{user `resource_group_name`}}",
      "azure_tags": {
        "timestamp": "{{isotime \"20060102150405\"}}",
        "imagetype": "jenkins-agent-win2019"
      }
    }
  ],
  "provisioners": [{
    "script": "windows-2019-provision.ps1",
    "type": "powershell",
    "environment_vars": [
        "MAVEN_VERSION={{.maven_version}}",
        "GIT_VERSION={{.git_version}}"
    ]
  }],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
