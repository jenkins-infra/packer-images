withCredentials([azureServicePrincipal('updatecli-azure-serviceprincipal'), aws(accessKeyVariable: 'updaecli-aws-access-key-id', secretKeyVariable: 'updatecli-aws-secret-access-key')]) {
    if (env.BRANCH_IS_PRIMARY) {
        updatecli(action: 'apply', updatecliAgentLabel: 'linux-amd64-docker', cronTriggerExpression: '@daily')
    } else {
        updatecli(action: 'diff', updatecliAgentLabel: 'linux-amd64-docker')
    }
}
